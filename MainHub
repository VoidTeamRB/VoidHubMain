-- Logic
local States = { Speed = false, Jump = false, ESP = false, Noclip = false, Spin = false, TP = false, AntiAFK = false, Fly = false, Invisibility = false, Spam = false }

-- COPY FUNCTION
TGButton.MouseButton1Click:Connect(function()
    if setclipboard then
        setclipboard(TG_LINK)
        TGButton.Text = "COPIED!"
        task.wait(1.5)
        TGButton.Text = "COPY TG LINK"
    else
        TGButton.Text = "NOT SUPPORTED"
        task.wait(1.5)
        TGButton.Text = "COPY TG LINK"
    end
end)

-- TAB LOGIC
MainTabBtn.MouseButton1Click:Connect(function()
    MainContainer.Visible = true; SettingsContainer.Visible = false
    MainTabBtn.TextColor3 = Color3.new(1, 1, 1); SettingsTabBtn.TextColor3 = Color3.new(0.6, 0.6, 0.6)
end)

SettingsTabBtn.MouseButton1Click:Connect(function()
    MainContainer.Visible = false; SettingsContainer.Visible = true
    SettingsTabBtn.TextColor3 = Color3.new(1, 1, 1); MainTabBtn.TextColor3 = Color3.new(0.6, 0.6, 0.6)
end)

-- Fly & Invis Logic (Internal)
local function ToggleInvisibility(state)
    local char = L_LocalPlayer.Character
    if char then
        for _, v in pairs(char:GetDescendants()) do
            if v:IsA("BasePart") or v:IsA("Decal") then
                if v.Name ~= "HumanoidRootPart" then v.Transparency = state and 1 or 0 end
            end
        end
    end
end

local flyPart, bv, bg
local function ToggleFly(state)
    local char = L_LocalPlayer.Character
    local root = char and char:FindFirstChild("HumanoidRootPart")
    if not root then return end
    if state then
        flyPart = Instance.new("Part", workspace); flyPart.Size = Vector3.new(1, 0.1, 1); flyPart.Transparency = 1; flyPart.CanCollide = false
        bv = Instance.new("BodyVelocity", root); bv.MaxForce = Vector3.new(math.huge, math.huge, math.huge); bv.Velocity = Vector3.new(0, 0, 0)
        bg = Instance.new("BodyGyro", root); bg.MaxTorque = Vector3.new(math.huge, math.huge, math.huge); bg.P = 15000; bg.CFrame = root.CFrame
    else
        if bv then bv:Destroy() end; if bg then bg:Destroy() end; if flyPart then flyPart:Destroy() end
        if char:FindFirstChildOfClass("Humanoid") then char:FindFirstChildOfClass("Humanoid").PlatformStand = false end
    end
end

-- Spam Loop
task.spawn(function()
    while task.wait(Config.SpamDelay) do
        if States.Spam and Config.SpamText ~= "" then
            local say = L_ReplicatedStorage:FindFirstChild("DefaultChatSystemChatEvents") and L_ReplicatedStorage.DefaultChatSystemChatEvents:FindFirstChild("SayMessageRequest")
            if say then say:FireServer(Config.SpamText, "All")
            else
                local tcs = game:GetService("TextChatService")
                if tcs.ChatVersion == Enum.ChatVersion.TextChatService then tcs.TextChannels.RBXGeneral:SendAsync(Config.SpamText) end
            end
        end
    end
end)

local function AddButton(text, key, icon)
    local Btn = Instance.new("TextButton", MainContainer)
    Btn.Size = UDim2.new(1, 0, 0, 38); Btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40); Btn.Text = icon .. " " .. text; Btn.TextColor3 = Color3.fromRGB(220, 220, 220); Btn.Font = MainFont; Btn.TextSize = 11
    Instance.new("UICorner", Btn).CornerRadius = UDim.new(0, 6)
    local S = Instance.new("UIStroke", Btn); S.Color = Color3.fromRGB(150, 150, 150); S.Transparency = 0.8
    Btn.MouseButton1Click:Connect(function()
        States[key] = not States[key]
        Btn.BackgroundColor3 = States[key] and Color3.fromRGB(80, 80, 80) or Color3.fromRGB(40, 40, 40)
        S.Color = States[key] and Color3.new(1,1,1) or Color3.fromRGB(150, 150, 150)
        if key == "Fly" then ToggleFly(States[key]) end
        if key == "Invisibility" then ToggleInvisibility(States[key]) end
    end)
end

