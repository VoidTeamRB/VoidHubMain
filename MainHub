AddButton("Click TP (Alt + –ü–ö–ú)", "TP", "üìç")
AddButton("Anti-AFK", "AntiAFK", "üí§")

L_RunService.Stepped:Connect(function()
    if States.Noclip and L_LocalPlayer.Character then
        for _, v in pairs(L_LocalPlayer.Character:GetDescendants()) do if v:IsA("BasePart") then v.CanCollide = false end end
    end
end)

L_RunService.Heartbeat:Connect(function()
    local char = L_LocalPlayer.Character
    local r = char and char:FindFirstChild("HumanoidRootPart")
    local hum = char and char:FindFirstChildOfClass("Humanoid")
    if r and hum then
        if States.Fly and bv and bg then
            hum.PlatformStand = true
            local dir = (workspace.CurrentCamera.CFrame.LookVector * (L_UIS:IsKeyDown(Enum.KeyCode.W) and 1 or L_UIS:IsKeyDown(Enum.KeyCode.S) and -1 or 0)) +
                        (workspace.CurrentCamera.CFrame.RightVector * (L_UIS:IsKeyDown(Enum.KeyCode.D) and 1 or L_UIS:IsKeyDown(Enum.KeyCode.A) and -1 or 0)) +
                        (Vector3.new(0, 1, 0) * (L_UIS:IsKeyDown(Enum.KeyCode.Space) and 1 or L_UIS:IsKeyDown(Enum.KeyCode.LeftShift) and -1 or 0))
            bv.Velocity = dir * Config.FlySpeed; bg.CFrame = workspace.CurrentCamera.CFrame
        end
        if States.Speed and L_UIS:IsKeyDown(Enum.KeyCode.LeftControl) then r.CFrame = r.CFrame + (hum.MoveDirection * 1.6) end
    end
end)

L_UIS.JumpRequest:Connect(function() if States.Jump and L_LocalPlayer.Character then L_LocalPlayer.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping") end end)

L_UIS.InputBegan:Connect(function(i, chat)
    if chat then return end
    if Config.Binding and i.UserInputType == Enum.UserInputType.Keyboard then
        Config.ToggleKey = i.KeyCode; Config.Binding = false; BindBtn.Text = "MENU KEY: " .. i.KeyCode.Name
    elseif i.KeyCode == Config.ToggleKey then Main.Visible = not Main.Visible end
    if i.UserInputType == Enum.UserInputType.MouseButton2 and States.TP and L_UIS:IsKeyDown(Enum.KeyCode.LeftAlt) then
        local r = L_LocalPlayer.Character and L_LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
        if r then r.CFrame = CFrame.new(L_Mouse.Hit.Position + Vector3.new(0, 3, 0)) end
    end
end)

BindBtn.MouseButton1Click:Connect(function() Config.Binding = true; BindBtn.Text = "..." end)

DestructBtn.MouseButton1Click:Connect(function() States.Fly = false; ToggleFly(false); States.Invisibility = false; ToggleInvisibility(false); ScreenGui:Destroy() end)
